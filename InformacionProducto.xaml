<Window x:Class="ProyectoWPF.InformacionProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Información del Producto" Height="500" Width="700" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image x:Name="ImagenProducto" Grid.Row="0" Height="200" HorizontalAlignment="Center"/>
        <TextBlock x:Name="NombreProducto" Grid.Row="1" FontSize="20" HorizontalAlignment="Center" Margin="10"/>
        <TextBlock x:Name="TamanoProducto" Grid.Row="2" FontSize="16" HorizontalAlignment="Center" Margin="10"/>
        <TextBlock x:Name="DescripcionProducto" Grid.Row="3" FontSize="14" HorizontalAlignment="Center" Margin="10"/>
        <TextBlock x:Name="PrecioProducto" Grid.Row="4" FontSize="16" HorizontalAlignment="Center" Margin="10"/>

        <Button Content="Salir" Grid.Row="6" Width="100" Height="30" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" 
                Click="SalirButton_Click"/>
    </Grid>
</Window>
