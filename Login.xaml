<Window x:Class="ProyectoWPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="600" Width="900" Background="#FFF4A5B1">

    <Grid>
        <Grid.Background>
            <!-- Imagen de fondo -->
            <ImageBrush ImageSource="Imagenes/Login/fondoLogin.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Barra de Navegación Superior -->
        <StackPanel Orientation="Horizontal" Background="#FFEB6EC3" Height="60" Margin="0,0,0,524">
            <!-- Logo pequeño -->
            <Image Source="Imagenes/Comun/logoPequeno.png" Width="50" Height="40" Margin="10"/>
            <Button Content="Home" FontSize="16" FontFamily="Arial Rounded MT Bold" Background="Transparent" Foreground="White" BorderBrush="Transparent" Margin="5"/>
            <Button Content="Characters" FontSize="16" FontFamily="Arial Rounded MT Bold" Background="Transparent" Foreground="White" BorderBrush="Transparent" Margin="5" Click="Button_Click"/>
            <Button Content="News" FontSize="16" FontFamily="Arial Rounded MT Bold" Background="Transparent" Foreground="White" BorderBrush="Transparent" Margin="5"/>
            <Button Content="Cart" FontSize="16" FontFamily="Arial Rounded MT Bold" Background="Transparent" Foreground="White" BorderBrush="Transparent" Margin="5"/>
        </StackPanel>

        <Border Background="#E05F0A88" CornerRadius="20" Width="300" Height="369" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <!-- Logo -->
                <TextBlock Text="Logo" FontSize="20"
                           FontFamily="Arial Rounded MT Bold"
                           Foreground="White" HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Título de inicio de sesión -->
                <TextBlock Text="LOG IN" FontSize="24"
                           FontFamily="Arial Rounded MT Bold"
                           Foreground="White" HorizontalAlignment="Center"
                           Margin="0,10"/>

                <!-- Campo de Email -->
                <TextBlock Text="EMAIL" Foreground="White" FontFamily="Arial Rounded MT Bold" Margin="0,10,0,5"/>
                <Border Background="White" CornerRadius="15" Width="200" Height="30">
                    <TextBox Background="Transparent"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"/>
                </Border>

                <!-- Campo de Contraseña con Border para esquinas redondeadas -->
                <TextBlock Text="PASSWORD" Foreground="White" FontFamily="Arial Rounded MT Bold" Margin="0,10,0,5"/>
                <Border Background="White" CornerRadius="15" Width="200" Height="30">
                    <PasswordBox Background="Transparent"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"/>
                </Border>
                
                
                <!-- Botón de Continuar -->
                <!-- TODO deberia verificar que el email y password esten en la base de datos -->
                <Button Content="CONTINUE" Width="200" Height="40"
                        Background="#FFEC1969" Foreground="White"
                        FontFamily="Arial Rounded MT Bold"
                        FontSize="16"
                        Margin="0,20,0,0" BorderThickness="0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
