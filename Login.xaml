<Window x:Class="HelloKittyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello Kitty Login" Height="600" Width="800" Background="#FFF4A5B1">

    <Grid>
        <!-- Fondo de la ventana -->
        <Grid.Background>
            <SolidColorBrush Color="#FFF4A5B1"/>
        </Grid.Background>

        <!-- Barra de Navegación Superior -->
        <StackPanel Orientation="Horizontal" Background="#FFEB6EC3" Height="60" Margin="0,0,0,524">
            <Ellipse Width="40" Height="40" Fill="LightPink" Margin="10"/>
            <Button Content="Home" FontSize="16" FontFamily="Arial Rounded MT Bold" Background="Transparent" Foreground="White" BorderBrush="Transparent" Margin="5"/>
            <Button Content="Characters" FontSize="16" FontFamily="Arial Rounded MT Bold" Background="Transparent" Foreground="White" BorderBrush="Transparent" Margin="5"/>
            <Button Content="News" FontSize="16" FontFamily="Arial Rounded MT Bold" Background="Transparent" Foreground="White" BorderBrush="Transparent" Margin="5"/>
            <Button Content="Cart" FontSize="16" FontFamily="Arial Rounded MT Bold" Background="Transparent" Foreground="White" BorderBrush="Transparent" Margin="5"/>
            <Button Content="Register" FontSize="16" FontFamily="Arial Rounded MT Bold" Background="Transparent" Foreground="White" BorderBrush="Pink" HorizontalAlignment="Right" Margin="5"/>
        </StackPanel>

        <!-- Panel principal de inicio de sesión -->
        <Border Background="#E05F0A88" CornerRadius="20" Width="300" Height="339" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <!-- Logo de Hello Kitty -->
                <TextBlock Text="Hello Kitty" FontSize="20" FontFamily="Arial Rounded MT Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Título de inicio de sesión -->
                <TextBlock Text="LOG IN" FontSize="24" FontFamily="Arial Rounded MT Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10"/>

                <!-- Campo de Email con Border para esquinas redondeadas -->
                <TextBlock Text="EMAIL" Foreground="White" FontFamily="Arial Rounded MT Bold" Margin="0,10,0,5"/>
                <Border Background="White" CornerRadius="15" Width="200" Height="30">
                    <TextBox Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center"/>
                </Border>

                <!-- Campo de Contraseña con Border para esquinas redondeadas -->
                <TextBlock Text="PASSWORD" Foreground="White" FontFamily="Arial Rounded MT Bold" Margin="0,10,0,5"/>
                <Border Background="White" CornerRadius="15" Width="200" Height="30">
                    <PasswordBox Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center"/>
                </Border>

                <!-- Botón de Continuar -->
                <Button Content="CONTINUE" Width="200" Height="40" Background="#FFEC1969" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="16" Margin="0,20,0,0" BorderThickness="0" />

                <!-- Enlace de Registro -->
                <TextBlock HorizontalAlignment="Center" Margin="0,10">
                    <Run Text="DON'T HAVE AN ACCOUNT?" Foreground="White"/>
                    <Run Text=" REGISTER" Foreground="Blue" FontWeight="Bold"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Placeholder para la Imagen de Hello Kitty (Derecha) -->
        <Rectangle Width="200" Height="300" Fill="Pink" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,50,0"/>
    </Grid>
</Window>
